 <!-- body content -->
    <div id="confirm-banner" class="banner pad-top-45 pad-bottom-45 pad-top-60-m pad-bottom-60-m">
        <div class="container text-center pad-top-20-m pad-bottom-20-m pad-top-55-l pad-bottom-55-l">
            <!-- SUB HEADERS -->
            <h2 id="find-welcome" class="banner-heading">
            	Before we continue...
            	<!-- dynamically generate "Welcome, [name]" on the DOM here -->
            </h2>

        </div>
    </div> <!--welcome section-->

    <div class="grey-row pad-top-60 pad-bottom-60">
    <div class="register-block pad-top-20 pad-bottom-20 container text-center">
      <h2 id="confirm-h2" class="uppercase pad-bottom-10">Please tell us more about you</h2>
      <div class="col-10-m no-float-m col-8-l no-float-l center">
        <p class="fs-4">
          We want to make sure your information is the most up-to-date so you can find a friend faster
        </p>
      </div>
      <div class="register-form col-10-l col-8-xl no-float center">
        <a class="event-speaker" href="#">
            <img class="block" src={{user.photoLink}}>
        </a>
        <form>
	        <div class="confirm-form-list">Name
						<input id="user-name" type="text" class="validate" value={{user.name}}>
	        </div>

	        <div class="confirm-form-list">Age
	        	<input id="user-age" type="text" class="validate" value={{user.age}}>
	        </div>
	        <div class="confirm-form-list">Occupation
						<input id="user-occu" type="text" class="validate" value={{user.occupation}}>
	        </div>
	        <div class="confirm-form-list">Link to profile image
						<input id="user-image" type="text" class="validate" value={{user.photoLink}}>
	        </div>
	        <div class="confirm-form-list"> Are you a vegetarian?
	              <label for="veg" class="sr">Vegetarian?</label>
	              <span class="select center">
	                <select name="veg" id="veg" class="center">
	                  <option value=true>Yes</option>
	                  <option value=false>No</option>
	                </select>
	              </span>
	        </div>

	        <div class="confirm-form-list"> Will you eat with someone who has a different diet?
	        	<label for="diet" class="sr">Different diet?</label>
	              <span class="select center">
	                <select name="diet" id="diet" class="center">
	                  <option value=true selected="selected">Yes</option>
	                  <option value=yes>No</option>
	                </select>
	              </span>

	        </div>
	        <div class="confirm-form-list input-field">
	        	Favorite food?
	          	<input id="fav-food" type="text" class="validate" value={{user.favFood}}>
	        </div>
	        <div class="confirm-form-list input-field">
	        	Least favorite food?
	          	<input id="least-food" type="text" class="validate" value={{user.leastFood}}>
	        </div>
	        <div class="confirm-form-list input-field">
	        	Favorite drink?
	          	<input id="fav-drink" type="text" class="validate" value={{user.favDrink}}>
	        </div>
	        <div class="confirm-form-list input-field">
	        	Least favorite drink?
	          	<input id="least-drink" type="text" class="validate" value={{user.leastDrink}}>
	        </div>
	        <div class="confirm-form-list input-field">
	        	On a scale of 1 to 5, do you consider yourself an introvert or extrovert?
	          	<p>
			      <input class="with-gap" name="in-ex" type="radio" id="proud-int" checked/>
			      <label for="proud-int">Proud Introvert</label>
			    </p>
			    <p>
			      <input class="with-gap" name="in-ex" type="radio" id="int"  />
			      <label for="int">Introvert</label>
			    </p>
			    <p>
			      <input class="with-gap" name="in-ex" type="radio" id="neu-ex-in"  />
			      <label for="neu-ex-in">Neutral</label>
			    </p>
			    <p>
			      <input class="with-gap" name="in-ex" type="radio" id="ext"  />
			      <label for="ext">Extrovert</label>
			    </p>
			    <p>
			      <input class="with-gap" name="in-ex" type="radio" id="proud-ext"  />
			      <label for="proud-ext">Proud Extrovert</label>
			    </p>
			    <br>
	        </div>
	        <div class="confirm-form-list input-field">
	        	What do you like to do in your free time?
	          	<input id="free-time" type="text" class="validate" value={{user.freeTime}}>
	        </div>
	        <div class="confirm-form-list input-field">
	        	When dining with a woman, a man should pay.
	          	<p>
			      <input class="with-gap" name="pay" type="radio" id="pay-SA" checked/>
			      <label for="pay-SA">Strongly Agree</label>
			    </p>
			    <p>
			      <input class="with-gap" name="pay" type="radio" id="pay-A"  />
			      <label for="pay-A">Agree</label>
			    </p>
			    <p>
			      <input class="with-gap" name="pay" type="radio" id="pay-N"  />
			      <label for="pay-N">Neutral</label>
			    </p>
			    <p>
			      <input class="with-gap" name="pay" type="radio" id="pay-D"  />
			      <label for="pay-D">Disagree</label>
			    </p>
			    <p>
			      <input class="with-gap" name="pay" type="radio" id="pay-SD"  />
			      <label for="pay-SD">Strongly Disagree</label>
			    </p>
			    <br>
	          	When together in a relationship, a woman should cook.
	          	<p>
			      <input class="with-gap" name="cook" type="radio" id="cook-SA" checked />
			      <label for="cook-SA">Strongly Agree</label>
			    </p>
			    <p>
			      <input class="with-gap" name="cook" type="radio" id="cook-A"  />
			      <label for="cook-A">Agree</label>
			    </p>
			    <p>
			      <input class="with-gap" name="cook" type="radio" id="cook-N"  />
			      <label for="cook-N">Neutral</label>
			    </p>
			    <p>
			      <input class="with-gap" name="cook" type="radio" id="cook-D"  />
			      <label for="cook-D">Disagree</label>
			    </p>
			    <p>
			      <input class="with-gap" name="cook" type="radio" id="cook-SD"  />
			      <label for="cook-SD">Strongly Disagree</label>
			    </p>
			    <br>
	        </div>

	        <div class="confirm-form-list">
	        	I can eat with someone for <div class="input-field inline">
            		<input id="min-avail" type="number" class="validate" value={{user.minAvail}}>
          			</div> minutes today.
	        </div>

        </form>

        <div class="banner-buttons">
        	<a class="button button-primary" id="submit"><span class="icon icon-right chevron-right">Continue</span></a>
             <a class="button" id="wrong-back-home">Cancel</a>
        </div>
    </div>
  	</div>

	<!-- Custom Script -->
		<script src="../../public/js/confirm.js" type="text/javascript"></script>
