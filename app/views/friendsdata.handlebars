<!-- THIS IS THE REQUEST MANAGEMENT PANEL ON THE LEFT SIDE OF THE PAGE -->
<div id="list" class="pure-u-1">
		{{#each request}}
        <div class="email-item email-item-selected pure-g">
            <div class="pure-u">
                <img width="64" height="64" class="email-avatar" src={{this.imagelink}}>
            </div>

            <div class="pure-u-3-4">
                <h5 class="email-name">{{this.username}}</h5>
                <h4 class="email-subject">{{this.usertitle}}</h4>
                <p class="email-desc">
									{{this.usermessage}}
                </p>
            </div>
        </div>
			{{/each}}
</div>

<!-- THIS IS THE LIST OF ALL USERS AT THE LOCATION ON THE RIGHT SIDE OF THE PAGE -->
<div id="main" class="pure-u-1">
	<!-- Dynamically generate user profiles  -->
	<div>

		{{#each user}}
		<div class="speakers-block pad-top-60 pad-bottom-60 container">

			<div class="text-center pad-top-20">
				<h2 class="h2 uppercase">Great people at your location</h2>
				<p class="fs-4">
					Click on each profile for more information
				</p>
			</div>

			<ul class="event-speakers clear">
				<li class="col-6-m col-3-l">
					<div class="col-12-m no-float">
						<a class="event-speaker" href="#">
							<img class="block" src="{{this.imagelink}}">
						</a>
						<h3 class="uppercase fs-4 pad-top-20"><a class="event-speaker-name" href="#">{{this.name}}</a></h3>
						<p>
							{{this.selfIntro}}
						</p>
					</div>
				</li>

			</ul>

		</div>
		{{/each}}
	</div>

</div>

	<!-- Custom Script -->
	<script src="../../js/friendsdata.js" type="text/javascript"></script>
